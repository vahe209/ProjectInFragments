<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/accent_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/grey_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/accent_4_opp_04" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add_members_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/circle"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_play"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_members_tv"
        style="@style/TextWhite14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/add_members_key"
        android:layout_toEndOf="@id/add_members_img"
        android:layout_alignTop="@id/add_members_img"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextLightGrey12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_friends_key"
        android:layout_below="@id/add_members_tv"
        android:layout_alignStart="@id/add_members_tv"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_bottom_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>