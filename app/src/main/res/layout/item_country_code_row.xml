<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_constraint"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp"
    android:background="@color/accent_3">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/flag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="ðŸ‡ºðŸ‡¸"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/number_code_tv"
        style="@style/TextLightGrey14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/flag_tv"
        android:text="+1"
        android:textColor="@color/accent_4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/country_name_tv"
        style="@style/TextWhite14"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/number_code_tv"
        android:gravity="center"
        android:text="United States" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/if_selected_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/selected_key"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="invisible" />

</RelativeLayout>