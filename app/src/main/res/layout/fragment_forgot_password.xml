<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_1"
    tools:context=".LoginAndRegister.ForgotPasswordFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/pass_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:src="@drawable/icon_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/confirm_text"
                style="@style/TextWhite14"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/confirm_pass_key"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pass_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/forgot_pass_edit_title"
                style="@style/TextWhite14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text="@string/email_or_phone_number_key"
                app:layout_constraintStart_toStartOf="@id/forgot_pass_edit_layout"
                app:layout_constraintTop_toBottomOf="@id/confirm_text" />

            <com.example.application.util.CustomTextInputLayout
                android:id="@+id/forgot_pass_edit_layout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/forgot_pass_edit_title">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/forgot_pass_edit"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </com.example.application.util.CustomTextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/send_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forgot_pass_edit_layout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/box1"
                    style="@style/NumberEditTextBoxStyle"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toStartOf="@id/box2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/box2"
                    style="@style/NumberEditTextBoxStyle"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toStartOf="@id/box3"
                    app:layout_constraintStart_toEndOf="@id/box1"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/box3"
                    style="@style/NumberEditTextBoxStyle"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toStartOf="@id/box4"
                    app:layout_constraintStart_toEndOf="@id/box2"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/box4"
                    style="@style/NumberEditTextBoxStyle"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:background="@drawable/forgot_pass_code_bg"
                    app:layout_constraintEnd_toStartOf="@id/box5"
                    app:layout_constraintStart_toEndOf="@id/box3"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/box5"
                    style="@style/NumberEditTextBoxStyle"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toStartOf="@id/box6"
                    app:layout_constraintStart_toEndOf="@id/box4"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/box6"
                    style="@style/NumberEditTextBoxStyle"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/box5"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextBlue14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/send_code_again_key"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/box1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send_code_btn"
                style="@style/MainRedButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/request_code_key"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/send_code_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>