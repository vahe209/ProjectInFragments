<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModelStyle</item>
    </style>

    <style name="AppModelStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorAccent">@color/white</item>
        <item name="height">50dp</item>
    </style>

    <style name="MyCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/light_grey</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="helperTextTextColor">@color/green</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="SmallSizeTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="FragmentTitleText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">700</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">700</item>
    </style>
    <style name="LoginButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:width">214dp</item>
        <item name="height">50dp</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">700</item>
    </style>

</resources>